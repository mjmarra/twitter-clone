<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') -%>

<body>
  <div class="container">
    <div class="row">

      <div class="col-md-6 d-none d-md-block">
        <div class="intro"></div>
      </div>

      <div class="col-md-6">
        <div class="login-signup-wrapper">
          <form action="/admin/login" method="post">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="email" value="" id="email" placeholder="Enter your email..."
                class="form-control bg-transparent text-light" required="true" />
            </div>
            <div class="form-group mt-4">
              <label for="password">Password</label>
              <input type="password" name="password" value="" id="password" placeholder="Enter your password..."
                class="form-control bg-transparent text-light" required="true" />
            </div>

            <button type="submit" name="button" class="btn btn-block btn-twitter rounded-pill mt-5" value="Upload">
              Login
            </button>
            <a class="btn btn-block btn-outline-twitter rounded-pill my-4" href="/admin/register">Sign Up</a>
          </form>
        </div>
      </div>
    </div>


  </div>


  <%- include('partials/scripts') -%>

</body>

</html>