<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') -%>

<body>
  <div class="container">
    <div class="row">

      <div class="col-md-6 d-none d-md-block">
        <div class="intro"></div>
      </div>

      <div class="col-md-6">
        <div class="login-signup-wrapper">
          <form action="/admin/register" method="post">
            <div class="form-group">
              <label for="firstname">Firsname</label>
              <input type="text" name="firstname" value="" id="firstname" placeholder="Enter your firstname..."
                class="form-control bg-transparent text-light" required="true" />
            </div>
            <div class="form-group">
              <label for="lastname">Lastname</label>
              <input type="text" name="lastname" value="" id="lastname" placeholder="Enter your lastname..."
                class="form-control bg-transparent text-light" required="true" />
            </div>
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" name="username" value="" id="username" placeholder="Enter your username..."
                class="form-control bg-transparent text-light" required="true" />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="email" value="" id="email" placeholder="Enter your email..."
                class="form-control bg-transparent text-light" required="true" />
            </div>
            <div class="form-group mb-5">
              <label for="password">Password</label>
              <input type="password" name="password" value="" id="password" placeholder="Enter your password..."
                class="form-control bg-transparent text-light" required="true" />
            </div>

            <button type="submit" name="button" class="btn btn-block btn-outline-twitter rounded-pill my-4"
              value="Upload">Sign Up</button>
          </form>
        </div>
      </div>
    </div>


  </div>


  <%- include('partials/scripts') -%>

</body>

</html>