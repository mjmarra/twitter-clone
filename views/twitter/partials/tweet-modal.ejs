<div id="tweet-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content bg-custom">
      <form action="/tweet" method="POST">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <textarea name="content" rows="4" cols="20" class="form-control text-light bg-transparent"
            placeholder="¿Qué está pasando?"></textarea>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-twitter rounded-pill px-3 my-2">Twittear</button>
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->